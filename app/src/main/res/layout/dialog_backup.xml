<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_10sdp"
    android:paddingVertical="@dimen/_10sdp"
    android:background="@drawable/bottomsheet_card"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_5sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/card_background_white_rounded"
        android:backgroundTint="@color/gray_stroke"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:src="@drawable/ic_backup_contacts"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="@string/backup_contacts"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:background="@drawable/card_background_white_rounded"
        android:backgroundTint="#F2F2F3">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/open_sans_semi_bold"
            android:singleLine="true"
            android:maxLines="1"
            android:textSize="@dimen/_11ssp"
            android:maxLength="50"
            android:hint="@string/please_enter_a_name"
            android:textColorHint="@color/text_gray"
            android:textColor="@color/text_gray"
            android:background="@null"/>

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="0/50"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/open_sans_medium"
        android:text="@string/the_contacts_will_be_backed_up_to_a_local_vcf_file_you_can_also_find_them_in_backups"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btCancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/black"
            android:backgroundTint="@color/selection_card_background"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="@string/cancel"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btBackup"
            android:layout_width="0dp"
            android:layout_height="@dimen/_45sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/photos_storage_color"
            android:fontFamily="@font/open_sans_semi_bold"
            android:text="@string/back_up"
            android:textColor="@color/light_photo_color"
            android:textSize="@dimen/_13ssp" />

    </LinearLayout>


</LinearLayout>